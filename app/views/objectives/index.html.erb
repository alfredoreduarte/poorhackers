<p id="notice"><%= notice %></p>

<h1>Objectives</h1>

<table class="table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Metric</th>
      <th>Baseline</th>
      <th>Current</th>
      <th>Goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @objectives.each do |objective| %>
      <tr>
        <td><%= objective.project.title %></td>
        <td><%= objective.title %></td>
        <td><%= objective.start_date %></td>
        <td><%= objective.end_date %></td>
        <td><%= objective.metric %></td>
        <td><%= objective.baseline %></td>
        <td><%= objective.current %></td>
        <td><%= objective.goal %></td>
        <td><%= link_to 'Show', objective %></td>
        <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
        <td><%= link_to 'Destroy', objective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

