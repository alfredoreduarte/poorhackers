<p id="notice"><%= notice %></p>

<h1><%= @organization.title %></h1>

<h2>Members (<%= @organization.users.length %>)</h2>
<ul>
	<% @organization.memberships.each do |membership| %>
		<li><%= membership.user.email %> | <%= membership.role %></li>
	<% end %>
</ul>

<h2>Projects (<%= @organization.projects.length %>)</h2>
<ul>
	<% @organization.projects.each do |project| %>
		<li><%= link_to project.title, project %></li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_organization_path(@organization) %> |
<%= link_to 'Back', organizations_path %>
